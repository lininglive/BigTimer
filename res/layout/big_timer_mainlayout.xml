<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="org.LiN.bigtimer.BigTimer_Activity" >

   <LinearLayout
       android:id="@+id/fullscreen_content_controls"
       style="?metaButtonBarStyle"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/black_overlay"
       android:fitsSystemWindows="true"
       android:orientation="vertical"
       android:weightSum="10" >

       <LinearLayout
           android:id="@+id/top_title"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_gravity="top|fill_horizontal"
           android:layout_weight="2"
           android:orientation="horizontal" >
           
           <LinearLayout
                android:id="@+id/top_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal" >

               <TextView
                   android:id="@+id/textView1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="S1" />
            
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/top_weather"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S2" />
                
                <ListView
                    android:id="@+id/providers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/top_lunar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextClock
                    android:id="@+id/textClock1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextClock" />

            </LinearLayout>

       </LinearLayout>

        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="6"
            android:orientation="horizontal" >
            
           
         <LinearLayout
                android:id="@+id/center_am_pm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

               <RadioButton
                   android:id="@+id/radioButton1"
                   android:layout_width="32dp"
                   android:layout_height="32dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_weight="1"
                   android:visibility="invisible"
                   android:text="AM" />

               <RadioButton
                   android:id="@+id/radioButton2"
                   android:layout_width="32dp"
                   android:layout_height="32dp"
                   android:layout_gravity="center_horizontal"
                   android:layout_weight="1"
                   android:visibility="invisible"
                   android:text="PM" />
  
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/center_number_clock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:orientation="horizontal" >

               <TextView
                   android:id="@+id/Text_clock"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:singleLine="true"
                   android:text="S4"
                   android:textSize="120sp" />

            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/center_number_second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:orientation="horizontal" >

                <AnalogClock
                    android:id="@+id/analogClock1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

              <CalendarView
                  android:id="@+id/calendarView1"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_title"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom|fill_horizontal"
            android:layout_weight="2"
            android:orientation="horizontal" >
            
            <LinearLayout
                android:id="@+id/bottom_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S5" />
            
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/bottom_stock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S6" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
